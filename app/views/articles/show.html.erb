<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @article.body %>
</p>

<p>
  <strong>User:</strong>
  <%= @article.user.name %>
</p>

<p>
  <strong>Created at:</strong>
  <%= @article.created_at %>
</p>

<p>
      <% if @article.image.exists? %>
          <%= image_tag @article.image.url %><br/>
      <% end %>
      <%= f.label :image, "Attach a New Image" %><br />
      <%= f.file_field :image %>
</p>

<% pre_vote = @article.votes.find { |vote| vote.user_id == current_user.id} %>
<% if pre_vote %>
  <%= button_to 'Unvote', article_vote_path(@article, pre_vote), method: :delete %>
<% else %>
  <%= button_to 'vote', article_votes_path(@article), method: :post %>
<% end %>

<p><%= @article.votes.count %> <%= (@article.votes.count) == 1 ? 'vote' : 'votes'%></p>

<%#= vote_btn(@article) %>
<small><%#= @article.votes.count %> </small>
<% if current_user == @article.user %>
  <%= link_to 'Edit', edit_article_path(@article) %> |
<% end %>
  <%= link_to 'Back', articles_path %>