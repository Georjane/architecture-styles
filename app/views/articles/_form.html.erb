<div class="flexdiv">
  <div class= "article-form flexleft">
  <%= form_with(model: article, local: true, html: {multipart: true}) do |form| %>
    <% if article.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>
  
        <ul>
        <% article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
  
    <div class="field">
      <%= form.label :body %>
      <%= form.text_area :body %>
    </div>
  
    <div class="field radios">
      <p>Choose a Section for your article</p>
      <% Section.all.each do |section| %>
        <%= form.radio_button :section_id, section.id %> 
        <%= form.label :section_id, section.name %>
      <% end %>
      <%#= form.radio_button :section_id, Section.find_by(name: 'Section 1').id %> 
      <%#= form.label :section_id, 'Section 1' %>
      <%#= form.radio_button :section_id, Section.find_by(name: 'Section 2').id %>
      <%#= form.label :section_id, 'Section 2' %>
      <%#= form.radio_button :section_id, Section.find_by(name: 'Section 3').id %> 
      <%#= form.label :section_id, 'Section 3' %>
      <%#= form.radio_button :section_id, Section.find_by(name: 'Section 4').id %>
      <%#= form.label :section_id, 'Section 4' %>
    </div>
    <div class="field">  
      <p>
  
        <%= form.label :image, "Attach an Image" %><br />
        <%= form.file_field :image %>
      </p>
    </div>
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
  </div>
  <div class="flexright">
    <%= link_to image_tag("wfh_1.svg", alt: "Remote working image") %>
  </div>
</div>