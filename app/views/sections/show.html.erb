<% if @section.articles.empty? %>
  <div class="row  logimage">
    <div class="col-md-6">
      <h3>Please create an Article <%= link_to 'New Article', new_article_path %></h3>
    </div>
    <div class="col-md-6">
      <%= link_to image_tag("wfh_1.svg", alt: "Remote working image") %>
    </div>
  </div>
<% else%>
    <div class = "" id = "category">
      <div class = "row row-no-gutters">
        
        <% display_row1_elements(@section.articles.ordered_by_most_recent).each do |article| %>
           <%= render partial: 'display1', locals: { article: article } %>
        <% end %>
        <% display_row2_elements(@section.articles.ordered_by_most_recent).each do |article| %>
           <%= render partial: 'display2', locals: { article: article } %>
        <% end %>
      </div>
    </div>
<% end %>
